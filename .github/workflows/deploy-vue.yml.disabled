name: Build and Deploy Vue.js

on:
  push:
    branches: [ master ]
  workflow_dispatch:

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout 🛎️
      uses: actions/checkout@v4

    - name: Setup Node.js ⚙️
      uses: actions/setup-node@v4
      with:
        node-version: '18'

    - name: Install and Build 🔧
      run: |
        npm install
        npx --yes vite build

    - name: Deploy 🚀
      uses: JamesIves/github-pages-deploy-action@v4
      with:
        folder: dist
        clean: true
        single-commit: true
